<h2>Mechanic: <%= @mechanic.name %></h2>
<h4>Years of Experience: <%= @mechanic.years_of_exp %></h4>

<h4>Current rides they're working on: </h4>
  <% @mechanic.rides_sorted.each do |ride| %>
    <li><%= ride.name %></li>
  <% end %>

<h4>Add a ride to workload:</h4>
<%= form_tag "/mechanics/#{@mechanic.id}", method: :put do %>
  <%=  label_tag "Ride ID: "%>
  <%=  text_field_tag :ride_id %>
  <%= submit_tag "Submit" %>
<% end %>
